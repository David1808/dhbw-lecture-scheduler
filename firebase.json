{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/courses",
        "function": "courses"
      },
      {
        "source": "/lectures/*",
        "function": "lectures"
      },
      {
        "source": "/lectures",
        "function": "lectures"
      }
    ]
  }
}
