{
  "extends": "tslint:recommended",
  "linterOptions": {
    "exclude": [
      "src/protos/**",
      "**/*.js"
    ]
  },
  "rules": {
    "max-line-length": [true, 120],
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": false,
    "interface-name": false,
    "no-namespace": false,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": {
      "severity": "warning",
      "options": [
        "debug",
        "info",
        "log",
        "time",
        "timeEnd",
        "trace"
      ]
    }
  },
  "jsRules": {
    "max-line-length": [true, 120]
  }
}
